<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<form method='input' action='/seasons'>
  Season: <input type=integer name='filter_ep'/>
  <input type='submit' />
</form><br>

<form method='input' action='/episodes'>
  Title: <input type='text' name='filter_title'/>
  <input type='submit' />
</form><br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Number</th>
      <th>Title</th>
      <th>Emmited at</th>
      <th>Minutes</th>
      <th>Season</th>
      <th>Film</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.id %></td>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.emmited_at %></td>
        <td><%= episode.minutes %></td>
        <td><%= episode.season_id %></td>
        <td><%= episode.season.film.name %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
